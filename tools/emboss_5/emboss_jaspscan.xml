<tool id="EMBOSS: jaspscan" name="jaspscan" version="5.0.0.1">
  <description>Scans DNA sequences for transcription factors</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements" />
  <code file="emboss_format_corrector.py" />
  <command>jaspscan -sequence '$input1' -menu '$menu' -threshold '$threshold' $both -outfile '$out_file1' -rformat2 '$out_format1' -auto</command>
  <inputs>
    <param name="input1" type="data" format="data" label="Sequence" /> 
    
    <param name="threshold" type="float" value="80" label="If the matrix score is greater than or equal to this percentage then a hit will be reported (Any numeric value)" />
    <param name="both" type="boolean" truevalue="-both" falsevalue="" checked="false" label="If set then both the forward and reverse strands are searched" />
    <param name="menu" type="select" label="Jaspar matrix set">     
      <option value="C">Core</option>
      <option value="F">Fam</option>
      <option value="P">Phylofacts</option>
      <option value="N">CNE</option>
      <option value="O">POLII</option>
      <option value="S">SPLICE</option>
    </param>   
    <param name="out_format1" type="select" label="Output sequence file format">
      <option value="seqtable">seqtable</option>
      <option value="embl">EMBL</option>
      <option value="genbank">GENBANK</option>
      <option value="gff">GFF</option>
      <option value="excel">Excel (tab delimited)</option>
      <option value="feattable">FeatTable</option>
      <option value="motif">Motif</option>
      <option value="regions">Regions</option>
      <option value="simple">SRS Simple</option>
      <option value="srs">SRS</option>
      <option value="table">Table</option>
      <option value="tagseq">TagSeq</option>
    </param>

  </inputs>
  <outputs>
    <data name="out_file1" format="seqtable" />
  </outputs>
  <tests>
    <test>
      <param name="input1" value="2.fasta"/>
      <param name="threshold" value="80"/>
      <param name="menu" value="C"/>
      <param name="out_format1" value="excel"/>
      <output name="out_file1" file="emboss_jaspscan_out.excel"/>
    </test>
  </tests>
  <help>
.. class:: warningmark

The input dataset needs to be sequences.

-----

    You can view the original documentation here_.

    .. _here: http://galaxy-iuc.github.io/emboss-5.0-docs/jaspscan.html
  </help>
  <expand macro="citations" />
</tool>
